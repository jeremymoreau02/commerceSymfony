{% extends 'loggedpage.html.twig' %}

{% block content %}
    <section class="content-header">
        <h1>
            Liste d'utilisateurs
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="/">
                    <i class="fa fa-dashboard"></i>
                    Utilisateurs
                </a>
            </li>
            <li class="active">
                <i class="fa fa-tasks"></i>
                Liste d'utilisateurs
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Utilisateurs</h3>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Pseudo</th>
                                    <th>Rôle</th>
                                    <th>Date de création</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.pseudo }}</td>
                                        <td>{{ user.role }}</td>
                                        <td>{{ user.createdDate }}</td>
                                        <td>
                                            <a href="/updateUser/{{ user.id }}" class="btn btn-flat btn-success" title="Play">
                                                Modifier
                                                <i class="ion ion-edit"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/deleteUser/{{ user.id }}" class="btn btn-flat btn-danger" title="Play">
                                                Supprimer
                                                <i class="ion ion-trash-a"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
